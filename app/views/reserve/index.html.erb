<%= stylesheet_link_tag "calendar", "data-turbo-track": "reload" %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-center text-indigo-600 mb-8">Event Calendar</h1>

  <%= month_calendar(events: @details) do |date, events| %>
    <div class="h-full min-h-[100px]">
      <div class="text-sm text-gray-600 mb-1"><%= date.day %></div>
      
      <% events.each do |event| %>
        <div class="bg-red-200 rounded p-1 mb-1 text-sm">
          <div class="font-medium"><%= event.reservedName %></div>
          <div class="text-xs text-gray-700"><%= event.zoneControl %></div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>